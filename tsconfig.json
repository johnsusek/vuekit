{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2020"
    ],
    "outDir": "dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
  },
  "include": [
    "lib",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}