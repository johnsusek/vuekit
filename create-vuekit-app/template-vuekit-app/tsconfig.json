{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitThis": true,
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "include": [
    "src",
    ".config",
    "vetur.config.js"
  ]
}